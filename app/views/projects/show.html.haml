#project-show.container-fluid
  #bulletin-board-wrapper
    = image_tag "/tmp/retina_wood.png", id: "board-background"

    #bulletin-board-content
      #title-container
        %h1#project-title= @project.title
        %h4#project-subtitle= @project.subtitle
        %h6#project-created-at
          #{@project.created_at} by 
          %span= link_to @project.user.name, @project.user
        %i.fa.fa-tags.fa-lg
        %span.tag
          = link_to "hello"
          %span ,
        %span.tag
          = link_to "another"
          %span ,
        %span.tag
          = link_to "another tag"
          %span ,
        %span.tag
          = link_to "yes"

      #project-basic-info.row
        .col-sm-6
          = image_tag "http://lorempixel.com/600/400", id: "project-image"
        .col-sm-6
          %h3 Project Description
          %p#project-main-description= @project.main_description

    #project-more-info
      .wrapper{"data-toggle" => "popover", "title" => "some title", "data-trigger" => "hover", href: "#", "data-placement" => "right"}
