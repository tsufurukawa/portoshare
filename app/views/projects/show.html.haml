#project-show.container
  #bulletin-board-wrapper
    = image_tag "/tmp/retina_wood.png", id: "board-background"

    #bulletin-board-content
      #title-container
        %h1= @project.title
        %h4= @project.subtitle
        %h6 
          #{@project.created_at} by 
          %span= link_to @project.user.name
        %i.fa.fa-tags.fa-lg
        %span 
          = link_to "hello"
          %span ,
        %span 
          = link_to "another"
          %span ,
        %span 
          = link_to "another tag"
          %span ,
        %span 
          = link_to "yes"

      #project-basic-info.row
        .col-sm-6
          = image_tag "http://lorempixel.com/600/400", id: "project-image"
        .col-sm-6
          %h3 Project Description
          %p= @project.main_description

    #project-more-info
